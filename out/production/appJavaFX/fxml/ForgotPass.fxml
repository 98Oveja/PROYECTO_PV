<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<StackPane prefHeight="960.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ForgotPassController">
    <children>
      <Pane prefHeight="800.0" prefWidth="1600.0" onKeyPressed="#handleButtonActionKey" style="-fx-background-color: white;" stylesheets="@../css/main.css">
         <children>

            <ImageView fitHeight="960.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/fondo.png" />
               </image></ImageView>

             <Pane layoutX="1000.0" layoutY="372.0" prefHeight="114.0" prefWidth="400.0">
                 <children>
                     <JFXTextField fx:id="txtUsername" layoutY="-3.0" prefHeight="34.0" prefWidth="400.0" promptText="Correo" styleClass="text-field" stylesheets="@../css/main.css" />
                   <Label fx:id="lblErrors" layoutX="1.0" layoutY="68.0" prefHeight="34.0" prefWidth="400.0" styleClass="labelWelcome" stylesheets="@../css/main.css" />
                 </children>
             </Pane>
             <JFXButton fx:id="btnForgot" layoutX="1108.0" layoutY="486.0" mnemonicParsing="false" onMouseClicked="#handleButtonAction" prefHeight="50.0" prefWidth="200.0" stylesheets="@../css/main.css" text="Enviar a mi correo" />
             <Label alignment="CENTER" layoutX="1080.0" layoutY="292.0" prefHeight="23.0" prefWidth="256.0" styleClass="labelWelcome" stylesheets="@../css/main.css" text="Ingresa tu correo elecronico" textFill="#43425d">
             </Label>
             <Label layoutX="1108.0" layoutY="233.0" styleClass="labelTitle" stylesheets="@../css/main.css" text="Ferreteria" textAlignment="CENTER" />
            <ToggleButton layoutX="1527.0" layoutY="38.0" mnemonicParsing="false" onAction="#previousPane" style="-fx-background-color: transparent;" stylesheets="@../css/main.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></ToggleButton>

         </children>
      </Pane>
    </children>
</StackPane>
