<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefWidth="800.0" style="-fx-background-color: #3C3B54;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserSetting.SettingsUser">
   <children>
      <HBox alignment="CENTER">
         <children>
            <BorderPane fx:id="imgUser" prefHeight="120.0" prefWidth="120.0" />
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="nameUser" text="Label" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font></Label>
                  <Label fx:id="userC" text="Label" textFill="WHITE">
                     <font>
                        <Font name="System Italic" size="14.0" />
                     </font></Label>
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="120.0" prefWidth="513.0">
               <children>
                  <JFXButton fx:id="btnViewUser" mnemonicParsing="false" onAction="#viewUser" text="Ver cuenta">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </HBox>
      <Label text="Mensajeria" textFill="WHITE">
         <VBox.margin>
            <Insets right="650.0" top="3.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Separator maxHeight="1.0" minHeight="1.0" opacity="0.33">
         <effect>
            <Glow />
         </effect>
      </Separator>
      <HBox>
         <children>
            <VBox prefHeight="326.0" prefWidth="450.0">
               <children>
                  <JFXTextField fx:id="serverName" labelFloat="true" promptText="SMTP Server Name">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="25.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="smtpPort" labelFloat="true" promptText="SMTP Port">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="emailAddress" labelFloat="true" promptText="Email Address">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXPasswordField fx:id="emailPassword" labelFloat="true" promptText="Email Password">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </JFXPasswordField>
                  <JFXCheckBox fx:id="sslCheckbox" prefHeight="17.0" prefWidth="239.0" selected="true" styleClass="checkbox-main" text="Enable TLS" />
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="418.0" spacing="25.0">
                     <children>
                        <JFXButton onAction="#handleTestMailAction" prefHeight="43.0" prefWidth="183.0" text="Send Test Mail" />
                        <JFXButton onAction="#saveMailServerConfuration" prefHeight="100.0" prefWidth="100.0" text="Save" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children></HBox>


   </children>

</VBox>
